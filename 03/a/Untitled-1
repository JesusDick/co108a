
R2=0   // @2, M=0

// (LOOP)                               // D=R0     D<0, goto END
while (R0 >= 0) { // if R0 < 0 goto END // @0, D=M, @END, D;JLT
    R2 = R2 + R1  // R2 = R2 + R1       // @2, M=D+M 
    R0 = R0-1     // R0 = R0 - 1        // @0, D=D-1
}                 // goto LOOP          //@LOOP

// (END)
